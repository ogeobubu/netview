{
  "name": "netview",
  "version": "1.0.0",
  "description": "NetView is a clone of Netflix.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && yarn start",
    "server-install": "yarn add",
    "client-install": "cd client && yarn add",
    "install-all": "concurrently \"yarn run server-install\"  \"yarn run client-install\"",
    "dev": "concurrently \"yarn run server\"  \"yarn run client\"",
    "heroku-postbuild": "cd client && yarn add && yarn run build"
  },
  "author": "Oge Obubu",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "concurrently": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.14",
    "morgan": "^1.10.0"
  },
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "nodemon": "^2.0.8"
  }
}
